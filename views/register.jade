extends layout

block content
 h2.page-header Some Useful Government Service
 
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/register',enctype='multipart/form-data')
  .form-group
   label Name
   input.form-control(name='name', type='text', placeholder='Enter Name') required
  .form-group
   label Sex
   input.form-control(name='sex', type='sex', placeholder='Enter Sex') required
  .form-group
   label Age
   input.form-control(name='age', type='text', placeholder='Enter Age') required
  .form-group
   label Country
    .dropdown
      button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
        | Choose Country
      .dropdown-menu(aria-labelledby='dropdownMenuButton')
        a.dropdown-item(href='#') India
        a.dropdown-item(href='#') Bangladesh
        a.dropdown-item(href='#') Sri Lanka

  
  input.btn.btn-primary(type='submit', name='submit',value='Apply')